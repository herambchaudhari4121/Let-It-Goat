    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" android:orientation="horizontal">

        <ImageView
            android:id="@+id/single_item_img"
            android:layout_width="260dp"
            android:layout_height="260dp"
            android:src="@drawable/wpi" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/single_item_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/wpi_s_quad_seal"
                android:textColor="@color/colorAccent"
                android:textSize="30sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/colorAccent"
                android:gravity="center"
                android:textSize="15sp"
                android:text="Being sold by: JP Bulman"/>

            <TextView
                android:id="@+id/single_item_price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingTop="30dp"
                android:text="$100.20"
                android:textColor="@color/colorAccent"
                android:textSize="30sp" />

        </LinearLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/single_item_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="20sp"
        android:paddingTop="20sp"
        android:paddingBottom="20sp"
        android:text="@string/df"
        android:textColor="@color/colorAccent" />

    <LinearLayout
        android:layout_width="match_parent"
